<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anatoly.assignment3.ReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_spinner"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="43dp"
        android:id="@+id/tvDistance" />

    <TextView
        android:text="Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/tvDuration"
        android:layout_below="@+id/tvDistance"
        android:layout_alignLeft="@+id/tvDistance"
        android:layout_alignStart="@+id/tvDistance" />

    <TextView
        android:text="Avg Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/tvAvgSpeed"
        android:layout_below="@+id/tvDuration"
        android:layout_alignLeft="@+id/tvDuration"
        android:layout_alignStart="@+id/tvDuration" />

    <TextView
        android:text="Calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCalories"
        android:layout_below="@+id/tvAvgSpeed"
        android:layout_alignLeft="@+id/tvAvgSpeed"
        android:layout_alignStart="@+id/tvAvgSpeed"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMin"
        android:layout_alignBaseline="@+id/tvDuration"
        android:layout_alignBottom="@+id/tvDuration"
        android:layout_alignLeft="@+id/tvKM"
        android:layout_alignStart="@+id/tvKM" />

    <TextView
        android:text="km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvKM"
        android:layout_alignBaseline="@+id/tvDistance"
        android:layout_alignBottom="@+id/tvDistance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDurationVal"
        android:layout_alignBaseline="@+id/tvMin"
        android:layout_alignBottom="@+id/tvMin"
        android:layout_alignLeft="@+id/tvDistanceVal"
        android:layout_alignStart="@+id/tvDistanceVal" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAvgSpeedVal"
        android:layout_alignBaseline="@+id/tvAvgSpeed"
        android:layout_alignBottom="@+id/tvAvgSpeed"
        android:layout_alignLeft="@+id/tvDurationVal"
        android:layout_alignStart="@+id/tvDurationVal" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCaloriesVal"
        android:layout_alignBaseline="@+id/tvCalories"
        android:layout_alignBottom="@+id/tvCalories"
        android:layout_alignLeft="@+id/tvAvgSpeedVal"
        android:layout_alignStart="@+id/tvAvgSpeedVal" />

    <TextView
        android:text="km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvKMH"
        android:layout_alignBaseline="@+id/tvAvgSpeedVal"
        android:layout_alignBottom="@+id/tvAvgSpeedVal"
        android:layout_alignLeft="@+id/tvMin"
        android:layout_alignStart="@+id/tvMin" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDistanceVal"
        android:layout_alignBaseline="@+id/tvKM"
        android:layout_alignBottom="@+id/tvKM"
        android:layout_toRightOf="@+id/tvAvgSpeed"
        android:layout_toEndOf="@+id/tvAvgSpeed"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />

</RelativeLayout>
